{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Edward-Natusch/Edward-Natusch.github.io/main/Homework10_President_Obama_Polling_Weekly_Retail_Price_of_Gasoline.csv",
    "format": {"type": "csv"}
  },
  "title": {
    "text": "Obama Presidential Approval vs. Retail Price of Gasoline",
    "subtitle": "Presidential Approval is lagged by a month, Source: Rasmussen Reports & FRED API",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },

  "width": 300,
  "height": 300,


  "encoding": {
    "y": {
      "field": "Total Approve",
      "type": "quantitative",
      "title": "Presidential Approval (%)",
      "scale": {"domain": [40, 70]},
      "axis": {"grid": false, "labelColor": "blue", "format": ",.5"}
    }
  },

  "layer": [
    {
      "mark": {
        "type": "line",
        "point": false,
        "color": "blue",
        "strokeWidth": 1,
        "width": 1
      },
      "encoding": {"x": {"field": "Date", "type": "temporal", "title": null}}
    },
    {
      "mark": {"type": "circle","color": "darkred", "strokeWidth": 1, "size": 25, "tooltip":true},
      "encoding": {
        "x": {
          "field": "Retail Price of Gasoline (Dollars per Gallon)",
          "type": "quantitative",
          "title": "Retail Price of Gasoline (Dollars per Gallon)",
          "scale": {"domain": [1.5, 4.2]},
          "axis": {"grid": false, "labelColor": "darkred", "format": "$,.5"}
        }
      }
    }
  ],

  "resolve": {"scale": {"x": "independent"}},
  "config": {}
}